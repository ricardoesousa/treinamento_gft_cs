@model IEnumerable<GerenciadorDeEventos.Models.Evento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="text-danger">
@TempData["Erro"]
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdIngressos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlrIngresso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneroEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalEvento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdIngressos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlrIngresso)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.GeneroEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalEvento.NomeLocal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>   
}
    </tbody>
</table>


