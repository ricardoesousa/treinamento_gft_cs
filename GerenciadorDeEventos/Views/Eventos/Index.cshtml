@model IEnumerable<GerenciadorDeEventos.Models.Evento>

@{
    ViewData["Title"] = "Index";
}

<h1><b>Eventos</b></h1>

<div class="container text-right">
    <a class="btn btn-info " asp-action="Create">Criar Novo Evento</a>
    <p></p>
</div>

<div class="text-danger">
@TempData["Erro"]
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImagemEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdIngressos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlrIngresso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeneroEvento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalEvento)
            </th>
            <th></th>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ImagemEvento)" class="img-fluid" width="100" height="100">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdIngressos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlrIngresso)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.GeneroEvento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalEvento.NomeLocal)
            </td>
            <td class="text-right">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Alterar</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>   
}
    </tbody>
</table>


