            </div>
            <div class="form-group">
                <label asp-for="LocalEvento" class="control-label"></label>
                <select asp-for="LocalEvento.Id" asp-items='@(new SelectList(ViewBag.Local,"Id","NomeLocal"))'></select>
                <span asp-validation-for="LocalEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
