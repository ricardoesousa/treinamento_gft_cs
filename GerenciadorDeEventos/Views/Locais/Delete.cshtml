@model GerenciadorDeEventos.Models.Local

@{
    ViewData["Title"] = "Delete";
}

<h1><b>Excluir Local</b></h1>

<h3>Você tem certeza que deseja excluir este Local?</h3>
<div>
    <h5 class="text-danger">Todos os eventos associados também serão excluídos!</h5>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeLocal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeLocal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoLocal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnderecoLocal)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirmar" class="btn btn-success" /> |
        <a class="btn btn-secondary" asp-action="Index">Voltar</a>
    </form>
</div>
